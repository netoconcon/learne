<div class="container">
  <h2>Detalhes</h2>
  <div>
    <h5>Pedido N° <%= @order.id %></h5>
    <p>Criado as <%= @order.created_at.strftime("%H:%m do dia %d-%m-%Y") %></p>
    <p>Usuário: <%= "#{@order.customer.first_name} #{@order.customer.last_name}"%></p>
    <p>Email: <%= @order.customer.email %></p>
    <p>Valor: <%= number_to_currency(@order.price, unit: "R$ ", separator: ",") %></p>
    <div>
      <p>Rua: <%= Address.find(@order.address_id).street %></p>
      <p>Numero: <%= Address.find(@order.address_id).number %></p>
      <p>Bairro: <%= Address.find(@order.address_id).neighborhood %></p>
      <p>Cidade: <%= Address.find(@order.address_id).city %></p>
      <p>Estado: <%= Address.find(@order.address_id).state %></p>
      <p>CEP: <%= Address.find(@order.address_id).zipcode %></p>
    </div>
  </div>
</div>
