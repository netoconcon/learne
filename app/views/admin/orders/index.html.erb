<div class="container">
  <h2>Pedidos</h2>

  <div class="card-product-header">
    <div class="order-small-item">
      <strong>Id</strong>
    </div>
    <div class="order-large-item text-left">
      <strong>Usu√°rio</strong>
    </div>
    <div class="order-medium-item">
      <strong>Data da Compra</strong>
    </div>
    <div class="order-medium-item">
      <strong>CPF</strong>
    </div>
    <div class="order-small-item">
      <strong>Origem</strong>
    </div>
    <div class="order-medium-item">
      <strong>Status</strong>
    </div>
    <div class="order-medium-item">
      <strong>Pagamento</strong>
    </div>
    <div class="order-medium-item">
      <strong>Total Produtos</strong>
    </div>
    <div class="order-small-item">
      <strong>Frete</strong>
    </div>
    <div class="order-medium-item">
      <strong>UTM Source</strong>
    </div>
    <div class="order-medium-item">
      <strong>UTM Campaign</strong>
    </div>
<!--     <div class="order-small-item">
      <strong>Infos</strong>
    </div> -->
  </div>

  <% if @orders.present? %>
    <% @orders.each do |order| %>
      <div class="card-product" data-customer-name="<%= order.customer.name %>" data-customer-email="<%= order.customer.email %>" data-customer-cpf="<%= order.customer.cpf %>" data-order-id="<%= order.id %>" data-new-status="<%= humanize_order_paid(order.paid) %>" data-order-status="<%= humanize_order_status(order) %>" data-payment-method="<%=humanize_payment_method(order) %>">
        <div class="order-small-item">
          <%= link_to admin_order_path(order) do %>
            <%= order.id %>
          <% end %>
        </div>
        <div class="order-large-item text-left">
          <h5><strong><%= order.customer.name %></strong></h5>
          <p><%= order.customer.email %></p>
        </div>
        <div class="order-medium-item">
          <%= order.created_at.strftime('%d/%m/%y - %H:%M') %>
        </div>
        <div class="order-medium-item">
          <%= order.cpf %>
        </div>
        <div class="order-small-item">
          Site
        </div>
        <div class="order-medium-item">
          <div class="order-status-tag status-<%= order.status %>">
            <%= humanize_order_status(order) %>
          </div>
        </div>
        <div class="order-medium-item">
          <%= humanize_payment_method(order)  %>
        </div>
        <div class="order-medium-item">
          <%= number_to_currency(order.total_amount) %>
        </div>
        <div class="order-small-item">
          <%= number_to_currency( (order.kit.shipment_cost) ) %>
        </div>
        <div class="order-medium-item">
          Source
        </div>
        <div class="order-medium-item">
          Campaign
        </div>
      </div>
    <% end %>
  <% end %>
</div>