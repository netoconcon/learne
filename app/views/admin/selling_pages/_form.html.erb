<%= simple_form_for [:admin, selling_page] do |f| %>
  <div class="styler">
    <div class="columns">
      <div>
        <%= f.input :name, label: 'Título' %>
        <%= f.input :product_id, label: 'Produto', collection: products_list %>
      </div>
      <div>
        <%= f.input :url, label: 'Url' %>
        <%= f.input :description, label: 'Descrição' %>
      </div>
    </div>
  </div>
  <%= f.button :submit, 'Salvar', class: "btn btn-primary submit-product" %>
<% end %>