<div class="report-card">
  <div class="report-card-title" style="background-color: <%= card_color %>">
    <h5><%= title %></h5>
  </div>
  <div class="report-card-content">
    <div style="height: 28px"></div>
    <div class="d-flex w-100 px-3 justify-content-between">
      <span class="d-block text-secondary">
        <small><%= humanize_date(Date.today) %></small>
      </span>
    </div>
    <div>
    <div class="inventory-dash">
      <div class="inventory-dash-item">
        Produto
      </div>
      <div class="inventory-dash-item">
        Estoque Disponível
      </div>
      <div class="inventory-dash-item">
        Estoque de Emergência
      </div>
    </div>
      <% products.each do |product| %>
        <% if product.inventory %>
          <% item_bg = 'low_inventory' if product.inventory.quantity < product.inventory.flag_quantities %>
          <div class="inventory-dash <%= item_bg %>">
            <div class="inventory-dash-item">
              <%= product.name %>
            </div>
            <div class="inventory-dash-item">
              <%= product.inventory.quantity  %>
            </div>
            <div class="inventory-dash-item">
              <%= product.inventory.flag_quantities %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>