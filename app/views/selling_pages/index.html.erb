<div class="main">
  <h1> Paginas de vendas </h1>
  <p> <%= link_to "Cadastrar nova pagina", new_selling_page_path %> </p>
  <p> <%= link_to "Voltar", settings_path %></p>
  <table class="table">
    <thead>
      <th scope="col">ID</th>
      <th scope="col">Produto</th>
      <th scope="col">Nome da pagina</th>
      <th scope="col">URL</th>
      <th scope="col">Editar</th>
      <th scope="col">Apagar</th>
    </thead>
    <tbody>
      <% @selling_pages.each do |selling_page| %>
        <tr>  
          <td><%= selling_page.id %></td>
          <td><%= selling_page.name %></td>  
          <td><%= selling_page.url %></td>
          <td><%= selling_page.description %></td>
          <td>
            <%= link_to  edit_selling_page_path(selling_page) do %>
              <i class="far fa-edit"></i>
            <% end %>
          </td>
          <td>
            <%= link_to selling_page_path(selling_page), method: :delete, data: { confirm: 'VocÃª tem certeza que deseja apagar o produto?' } do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>