<div class="container" data-controller="masks">
  <%= simple_form_for @company do |f| %>
    <%= f.input :international, label: 'Internacional', as: :select, colletion: [['Nao', false], ['Sim', true]], include_blank: false %>
    <%= f.input :name, label: 'Nome' %>
    <%= f.input :cnpj, label: 'CNPJ', input_html: { "data-js" => "cnpj" }  %>
    <%= f.input :email_support, label: 'Email de suporte' %>
    <%= f.input :email_notification, label: 'Email para notificacoes' %>
    <%= f.input :phone_support, label: 'Telefone de suporte', input_html: { "data-js" => "phone" } %>
    <%= f.input :shipment_origin_zipcode, label: 'CEP de saida', input_html: { "data-js" => "cep" } %>
    <%= f.button :submit, 'Cadastrar', class: "btn btn-primary" %>
  <% end %>
</div>
